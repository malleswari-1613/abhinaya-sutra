<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <!-- Windows 8/10/11 Tile Icons -->
      <square70x70logo src="/images/mstile-70x70.png"/>
      <square150x150logo src="/images/mstile-150x150.png"/>
      <square310x310logo src="/images/mstile-310x310.png"/>
      <wide310x150logo src="/images/mstile-310x150.png"/>
      
      <!-- Tile color for Windows -->
      <TileColor>#9c27b0</TileColor>
      
      <!-- Background color for Windows -->
      <TileImage src="/images/mstile-310x310.png"/>
    </tile>
    
    <!-- Windows 10/11 Notification Badge -->
    <notification>
      <polling-uri src="/notifications/notifications.json"/>
      <polling-uri2 src="/notifications/notifications-v2.json"/>
      <polling-uri3 src="/notifications/notifications-v3.json"/>
      <polling-uri4 src="/notifications/notifications-v4.json"/>
      <polling-uri5 src="/notifications/notifications-v5.json"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>
